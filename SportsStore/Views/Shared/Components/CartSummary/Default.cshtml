@model Cart

<div>
    @if(Model.Lines.Count > 0)
    {
        <small>
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) items(s)
            @Model.ComputeTotalValue().ToString("c");
        </small>
    }
    <a asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()"><i class="fa fa-shopping-cart"></i></a>
</div>